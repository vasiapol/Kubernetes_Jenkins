podTemplate(label: 'build-pod',
    containers: [
        containerTemplate(name: 'golang', image: 'golang:1.7', ttyEnabled: true, command: 'cat')
    ],
    volumes: [
        hostPathVolume(hostPath: '/var/run/docker.sock', mountPath: '/var/run/docker.sock')
    ]
) {
    node('build-pod') {
        container('golang') {
            stage('Checkout') {
                sh 'time'
			}
		}
	}
 }