// this guarantees the node will use this template
def label = "mypod-${UUID.randomUUID().toString()}"
podTemplate(label:label) {
	activeDeadlineSeconds: 300
    node(label) {
        stage('Run shell') {
            sh 'echo hello world'
        }
		stage('Time') {
            sh 'time'
        }
		stage('Run shell') {
            sh 'whoami'
        }
    }
}